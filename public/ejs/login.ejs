<md-dialog>
    <form ng-cloak="">
        <md-toolbar>
            <div class="md-toolbar-tools">
                <span flex></span>
                <md-button type="submit" class="md-raised" ng-click="login()">
                Login
                </md-button>
                <md-button class="md-raised" ng-click="cancel()">
                Cancel
                </md-button>
            </div>
        </md-toolbar>

        <md-dialog-content >
            <div class="md-dialog-content">
                <h1>Login</h1>
            <label>
                E-Mail
                <input type="text" ng-model="email" required>
                </label>
                <br>
                <label>
                Password
                <input type="password" ng-model="password" required>
                </label>
            </div>
        </md-dialog-content>
    </form>
</md-dialog>